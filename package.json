{
  "name": "openloom",
  "version": "0.1.0",
  "private": true,
  "description": "Self-hosted video messaging for teams. Open-source Loom alternative.",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "worker": "tsx --env-file=.env src/worker/index.ts",
    "worker:dev": "tsx watch --env-file=.env src/worker/index.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@fingerprintjs/fingerprintjs": "^5.0.1",
    "@prisma/client": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.0.0",
    "ioredis": "^5.4.0",
    "jose": "^6.1.3",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "prisma": "^6.0.0",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0"
  }
}
